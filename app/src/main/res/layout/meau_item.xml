<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.MaterialComponents.NoActionBar"
    app:cardBackgroundColor="@color/colorAddLightWhite"
    android:layout_width="300dp"
    android:layout_height="100dp"
    android:layout_margin="12dp"
    android:elevation="2dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_margin="3dp"
            android:id="@+id/goods_show_pic"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fanqiechaodan"
            />

        <LinearLayout
            android:id="@+id/goods_all"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:rotationX="0"
            android:rotationY="0"
            android:translationX="100dp">

            <LinearLayout
                android:id="@+id/goods_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/goods_text"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/goods_add"
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="90dp"
                            android:layout_toRightOf="@id/goods_show_name"
                            android:background="@drawable/add" />

                        <TextView
                            android:id="@+id/goods_show_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="西红柿炒蛋"
                            android:textColor="@color/colorGrey"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/goods_show_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="6dp"
                    android:text="￥36"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/goods_show_desc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="此菜主料是猪肉，要选用三成肥、七成瘦的猪肉切丝滑炒，方能使肉丝质地鲜嫩。成菜色红润、肉嫩、质鲜、富鱼香味。"
                    android:textColor="@color/colorGrey"
                    android:textSize="8sp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
