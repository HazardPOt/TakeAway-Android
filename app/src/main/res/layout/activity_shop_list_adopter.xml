<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adopter.ShopListAdopter"
    android:padding="10dp">

    <ImageView
        android:id="@+id/lv_iv_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop">
    </ImageView>

    <LinearLayout
        android:layout_width="288dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lv_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:text="快乐柠檬"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/lv_tv_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingLeft="5dp"
                android:text="月售1105"
                android:layout_below="@id/lv_tv_1"
                android:textColor="@color/gray"
                android:textSize="13sp">
            </TextView>

            <TextView
                android:id="@+id/lv_tv_3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingLeft="5dp"
                android:text="起送¥20 | 配送¥5"
                android:layout_below="@id/lv_tv_2"
                android:textColor="@color/gray"
                android:textSize="13sp">
            </TextView>

            <TextView
                android:id="@+id/lv_tv_4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingLeft="160dp"
                android:text="配送约30分钟"
                android:layout_below="@id/lv_tv_1"
                android:textColor="@color/gray"
                android:textSize="13sp">
            </TextView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>